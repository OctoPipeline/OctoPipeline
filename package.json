{
  "name": "octopipeline",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@popperjs/core": "^2.10.2",
    "axios": "^0.24.0",
    "chart.js": "^3.6.0",
    "dropzone": "^6.0.0-beta.1",
    "form-data": "^4.0.0",
    "ldapjs": "^2.3.1",
    "mongoose": "^6.0.12",
    "next": "^12.0.4",
    "next-auth": "^3.29.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "recoil": "^0.5.2",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.2.0",
    "typeorm": "0.2.28"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.34",
    "@types/googlemaps": "^3.43.3",
    "@types/ldapjs": "^2.2.2",
    "@types/react": "17.0.27",
    "@types/react-dom": "^17.0.11",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "husky": "^4.3.8",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "typescript": "4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js --ext .jsx --ext .tsx --ext .ts --ignore-path .gitignore"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "resolutions": {
    "typeorm": "0.2.28"
  }
}
